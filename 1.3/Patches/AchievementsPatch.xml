								<raceDefs>
									<li>
										<key>MorrowRim_OrsimerRace</key>
										<value>12</value>
									</li>
								</raceDefs>
							</tracker>

							<texPath>Achievements/MorrowRim_AchievementOrsimerColonists</texPath>
							<points>25</points>
						</AchievementsExpanded.AchievementDef>
						
						<!-- Hediffs -->
						<!-- Incidents -->
						
						<AchievementsExpanded.AchievementDef>
							<defName>MorrowRim_AchievementBondedEchatere</defName>
