						<AchievementsExpanded.AchievementDef>
							<defName>MorrowRim_AchievementOrichalcum</defName>
							<label>Pig Steel</label>
							<description>Obtain 100 ingots of orichalcum</description>
							<bgtexPath>Achievements/MorrowRim_AchievementBackgroundOrsimer</bgtexPath>
							<tab>MorrowRim_AchievementsTab</tab>
							<tracker Class="AchievementsExpanded.ItemTracker">
								<def>MorrowRim_Orichalcum</def>
								<count>100</count>
							</tracker>

							<texPath>Achievements/MorrowRim_AchievementOrichalcum</texPath>
							<points>15</points>
						</AchievementsExpanded.AchievementDef>
						
						<!-- Kills -->
						
						<AchievementsExpanded.AchievementDef>
							<defName>MorrowRim_OrsimerSlayer</defName>
							<label>Death to the Green-Skins</label>
							<description>Slay 50 Orsimer</description>
							<bgtexPath>Achievements/MorrowRim_AchievementBackgroundOrsimer</bgtexPath>
							<tab>MorrowRim_AchievementsTab</tab>
							<tracker Class="AchievementsExpanded.KillTracker">
								<raceDef>MorrowRim_OrsimerRace</raceDef>
								<count>50</count>
							</tracker>

							<texPath>Achievements/MorrowRim_OrsimerSlayer</texPath>
							<points>25</points>
						</AchievementsExpanded.AchievementDef>
						
						<!-- Livestock -->
						
						<AchievementsExpanded.AchievementDef>
							<defName>MorrowRim_AchievementTameWelwa</defName>
							<label>Well Well Well-Wa</label>
							<description>Have 3 tame welwa</description>
							<bgtexPath>Achievements/MorrowRim_AchievementBackgroundOrsimer</bgtexPath>
							<tab>MorrowRim_AchievementsTab</tab>
							<tracker Class="AchievementsExpanded.KindDefTracker">
								<kindDefs>
									<li>
										<key>MorrowRim_Welwa</key>
										<value>3</value>
									</li>
								</kindDefs>
							</tracker>

							<texPath>Achievements/MorrowRim_AchievementTameWelwa</texPath>
							<points>10</points>
						</AchievementsExpanded.AchievementDef>
						
