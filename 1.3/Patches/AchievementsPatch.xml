						<AchievementsExpanded.AchievementDef>
							<defName>MorrowRim_AchievementBeserkOrsimer</defName>
							<label>Now The Kid Gloves Come Off</label>
							<description>Witness an Orsimer enter a beserk frenzy for the first time</description>
							<bgtexPath>Achievements/MorrowRim_AchievementBackgroundOrsimer</bgtexPath>
							<tab>MorrowRim_AchievementsTab</tab>
							<tracker Class="AchievementsExpanded.RecordEventTracker">
								<def>MorrowRim_OrsimerEnrages</def>
								<count>1</count>
