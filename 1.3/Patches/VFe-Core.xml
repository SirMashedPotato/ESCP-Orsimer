<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Factions Expanded - Core - Now with Faction Discovery!</li>
			<li>Vanilla Factions Expanded - Core</li>
			<li>Vanilla Expanded Framework</li>
		</mods> 
				
		<match Class="PatchOperationSequence">
			<operations>
			
				<!-- Patch appropriate weapons to be usable with shields -->
				<li Class="PatchOperationAddModExtension">
					<xpath>/Defs/ThingDef[defName="MorrowRim_MeleeWeapon_OrsimerMace"]</xpath>
					<value>
						<li Class="VFECore.ThingDefExtension">
							<usableWithShields>true</usableWithShields>
						</li>
					</value>
				</li>
				
				<li Class="PatchOperationAddModExtension">
					<xpath>/Defs/ThingDef[defName="MorrowRim_MeleeWeapon_OrsimerAxe"]</xpath>
					<value>
						<li Class="VFECore.ThingDefExtension">
							<usableWithShields>true</usableWithShields>
						</li>
					</value>
				</li>
				
				<li Class="PatchOperationAddModExtension">
					<xpath>/Defs/ThingDef[defName="MorrowRim_MeleeWeapon_OrsimerSword"]</xpath>
					<value>
						<li Class="VFECore.ThingDefExtension">
							<usableWithShields>true</usableWithShields>
						</li>
					</value>
				</li>
				
				<li Class="PatchOperationAddModExtension">
					<xpath>/Defs/ThingDef[defName="MorrowRim_MeleeWeapon_Scourge"]</xpath>
					<value>
						<li Class="VFECore.ThingDefExtension">
							<usableWithShields>true</usableWithShields>
						</li>
					</value>
				</li>
				
			</operations>
		</match>
	</Operation>
	
</Patch>

